<h1>Sizes</h1>

<% if current_user.try(:admin?) %>
  <p><%= link_to 'New Size', new_size_path, class: 'btn btn-default' %></p>
<% end %>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
    </tr>
  </thead>
  <tbody>
  <%- @sizes.each do |size| %>
    <tr>
      <td><%= link_to size.name, size %></td>
      <td><%= size.abbreviation %></td>
    </tr>
  <% end %>
  </tbody>
</table>

