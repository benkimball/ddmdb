<h1>Releases</h1>

<p><%= link_to 'New Release', new_release_path, class: 'btn btn-default' %></p>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
      <th>Count</th>
    </tr>
  </thead>
  <tbody>
  <%- @releases.each do |release| %>
    <tr>
      <td><%= link_to release.name, release %></td>
      <td><%= release.abbreviation %></td>
      <td><%= release.count %></td>
    </tr>
  <% end %>
  </tbody>
</table>

