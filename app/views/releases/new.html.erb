<h1>New Release</h1>

<%= form_for @release, html: {role: "form"} do |f| %>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :abbreviation %>
  <%= f.text_field :abbreviation, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :count %>
  <%= f.text_field :count, class: 'form-control' %>
  </div>

  <%= f.submit 'Create Release', class: 'btn btn-default' %>
<% end %>
