<h1>Subtypes</h1>

<% if current_user.try(:admin?) %>
  <p><%= link_to 'New Subtype', new_subtype_path, class: 'btn btn-default' %></p>
<% end %>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
  <%- @subtypes.each do |subtype| %>
    <tr>
      <td><%= link_to subtype.name, subtype %></td>
    </tr>
  <% end %>
  </tbody>
</table>
