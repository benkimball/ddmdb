<h1>Miniatures</h1>

<p><%= link_to 'New Miniature', new_miniature_path, class: 'btn btn-default' %></p>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Release</th>
      <th>Type</th>
      <th>Subtype</th>
    </tr>
  </thead>
  <tbody>
  <%- @miniatures.each do |miniature| %>
    <tr>
      <td><%= link_to miniature.name, miniature %></td>
      <td><%= link_to miniature.release.name, miniature.release %></td>
      <td><%= link_to miniature.type.name, miniature.type %></td>
      <td><%= link_to miniature.subtype.name, miniature.subtype %></td>
    </tr>
  <% end %>
  </tbody>
</table>

