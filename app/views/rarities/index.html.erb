<h1>Rarities</h1>

<% if current_user.try(:admin?) %>
  <p><%= link_to 'New Rarity', new_rarity_path, class: 'btn btn-default' %></p>
<% end %>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
    </tr>
  </thead>
  <tbody>
  <%- @rarities.each do |rarity| %>
    <tr>
      <td><%= link_to rarity.name, rarity %></td>
      <td><%= rarity.abbreviation %></td>
    </tr>
  <% end %>
  </tbody>
</table>

