<h1>Types</h1>

<% if current_user.try(:admin?) %>
  <p><%= link_to 'New Type', new_type_path, class: 'btn btn-default' %></p>
<% end %>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
  <%- @types.each do |type| %>
    <tr>
      <td><%= link_to type.name, type %></td>
    </tr>
  <% end %>
  </tbody>
</table>

